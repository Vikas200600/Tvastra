<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Tvastra</title> 
    <%- include('partials/linker.ejs') %>  
    <link href="./../assets/css/styles.css" rel="stylesheet" type="text/css">
    <script src="./../assets/scripts/googleMapApi.js"></script>
</head>
<body>
    <%- include('partials/header.ejs') %>  
    <%- include('partials/toaster.ejs') %> 


    <div class="banner">
        <h2>Contact Us</h2>
        <p>Home / Contact Us</p>
    </div>
    
    <section id="map-container">
    <div id="map"></div>
    </section>


    <section id="contact">
        <div id="contact-info">
            <div class=row>
                <i class="fas fa-home"></i>
                <div>
                    <h6>Noida, India</h6>
                    <p>Sector 45</p>
                </div>
            </div>
            <div class=row>
                <i class="fas fa-phone-alt"></i>
                <div>
                    <h6>00 (440) 9865 562</h6>
                    <p>Mon to Fri 9am to 6pm</p>
                </div>
            </div>
            <div class=row>
                <i class="fas fa-at"></i>
                <div>
                    <h6>support@tvastra.com</h6>
                    <p>Send us your query anytime!</p>
                </div>
            </div>
        </div>    
        <div id="send-message">
            <form>
                <input type="text" placeholder="Enter your name">
                <input type="text" placeholder="Enter email address">
                <input type="text" placeholder="Enter subject">
                <input type="text" id="message-box" placeholder="Enter Message">
                <input type="submit" class="btn-secondary" value="Send Message">
            </form>
        </div>
    </section>
    
    <%- include('partials/footer.ejs') %>
    
</body>
</html>