<header>
    <nav>
        <img onclick="document.location='/'" src="./../assets/images/Logo.jpg" alt="Tvastra Logo">
        <i onclick="toggleToaster()" class="fas fa-bars" ></i>
        <ul id="links">
            <li><a href="/doctors">Doctors</a></li>
            <li><a href="/hospitals">Hospitals</a></li>
            <li><a href="/Treatments">Treatment</a></li>
            <li><a href="/faq">FAQs</a></li>
            <li><a href="/about">About</a></li>
        </ul>
        <div id="buttons">
            <% if(loggedIn) { %>
                <button class="btn-secondary" onclick="document.location='/Plus'">Tvastra Plus</button>
            <% } else { %>
                <button class="btn-light" onclick="document.location='/login'">Login/Sign Up</button>
            <% } %>
            <button class="btn-primary">Get a Quote</button>
            <% if(loggedIn) { %>
                <div id="userInfo" onclick="toggleToaster()">
                    <p id="username"> <%= username %></p>
                    <i class="fas fa-chevron-down" aria-hidden="false"> </i>
                </div>
            <% } %>

        </div>
    </nav>
</header>